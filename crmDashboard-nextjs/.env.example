# Backend API URL (server-side only, not exposed to client)
# This is used by Next.js API routes to proxy requests to the backend
BACKEND_API_URL=http://127.0.0.1:8001

# Alternative: You can also use API_URL
# API_URL=http://127.0.0.1:8001

# App Configuration (optional)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Admin Configuration (optional, for demo purposes)
NEXT_PUBLIC_ADMIN_EMAIL=admin@example.com
NEXT_PUBLIC_ADMIN_PASSWORD=admin123
NEXT_PUBLIC_ADMIN_NAME=Admin User
